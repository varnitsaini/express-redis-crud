<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        {{# if error}}
            <div class="alert alert-warning col-md-offset-3 col-md-9">
                Either key or value is invalid.
            </div>
        {{/if}}

        <form class="form-horizontal" action="/redis/sets" method="post">
            <div class="form-group">
                <label class="control-label col-sm-3" for="redis-sets-key">Enter Sets Key:</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="redis-sets-key" placeholder="Enter Redis Key" name="redis-sets-value[]" {{#if key}} value="{{key}}" readonly{{/if}}>
                </div>
            </div>
            <div class="form-group member-fields">
                <label class="control-label col-sm-3" for="redis-sets-value">Enter Sets Member Value:</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="redis-sets-value" placeholder="Enter Sets Member Value" name="redis-sets-value[]">
                </div>
                <div class="col-sm-1">
                    <button type="button" class="btn btn-default" onclick="addMemberFields()"><b>+</b></button>
                </div>

            </div>
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    <button type="submit" class="btn btn-default">Save</button>
                    {{# if key }}<a href="/redis/sets"><button type="submit" class="btn btn-default">New Entry</button></a>{{/if}}
                </div>
            </div>
        </form>
    </div>

</div>
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <table class="table table-stripped table-bordered table-condensed table-hover">
            <thead>
            <tr>
                <th>Key</th>
                <th>Value</th>
            </tr>
            </thead>
            <tbody>
            {{#each data}}
                <tr>
                    <td >{{@key}}<a href="/redis/sets?key={{@key}}"><button type="button" class="btn btn-default btn-xs pull-right">Edit</button></a></td>
                <td>
                    {{#each this}}
                        {{this}}<br>
                    {{/each}}
                </td>
                </tr>
            {{/each}}

            </tbody>

        </table>

    </div>
</div>


