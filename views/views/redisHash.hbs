<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        {{# if error}}
            <div class="alert alert-warning col-md-offset-3 col-md-9">
                Either key or value is invalid.
            </div>
        {{/if}}

        <form class="form-horizontal" action="/redis/hash" method="post">
            <div class="form-group">
                <label class="control-label col-sm-3" for="redis-hash-key">Enter Hash Field:</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="redis-hash-key" placeholder="Enter Redis Key" name="redis-hash[]" >
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-3" for="redis-hash-value">Enter Hash Field/Values:</label>
                <div class="col-sm-9">
                    <div class="row value-fields">
                        <label class="control-label col-sm-1" for="redis-hash-value">Field:</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="redis-hash-value" placeholder="Field" name="redis-hash[]">
                        </div>
                        <label class="control-label col-sm-2" for="redis-hash-value">Value:</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="redis-hash-value" placeholder="Value" name="redis-hash[]">
                        </div>
                        <div class="col-sm-1">
                           <button type="button" class="btn btn-default" onclick="addValueFields()">+</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    <button type="submit" class="btn btn-default">Save</button>
                    {{# if key }}<a href="/redis/hash"><button type="submit" class="btn btn-default">New Entry</button></a>{{/if}}
                </div>
            </div>
        </form>
    </div>

</div>
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <table class="table table-stripped table-bordered table-condensed table-hover">
            <thead>
            <tr>
                <th>Key</th>
                <th>Value</th>
            </tr>
            </thead>
            <tbody>
            {{#each data}}
                <tr>
                    <td>{{@key}}</td>
                    <td>{{this}}<a href="/redis/hash?key={{@key}}&value={{this}}"><button type="button" class="btn btn-default btn-xs pull-right">Edit</button></a></td>
                </tr>
            {{/each}}

            </tbody>
        </table>
    </div>
</div>


